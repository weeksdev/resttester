<Controls:MetroWindow x:Class="RestTester.ThemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestTester"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Set Themes" Height="150" Width="300" GlowBrush="Gray">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <ComboBox Margin="10" ItemsSource="{Binding Path=BaseThemes}" SelectedValue="{Binding Path=BaseTheme}" />
            <ComboBox Margin="10" ItemsSource="{Binding Path=ThemeAccents}" SelectedValue="{Binding Path=ThemeAccent}" />
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
